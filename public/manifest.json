{
  "manifest_version": 3,
  "name": "Åšrutilekhak",
  "version": "0.1.0",
  "description": "Local, privacy-first audio transcription for any browser tab",
  
  "permissions": [
    "tabCapture",
    "storage",
    "downloads",
    "offscreen"
  ],
  
  "host_permissions": [
    "https://huggingface.co/*"
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  },
  
  "background": {
    "service_worker": "background/background.js"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
